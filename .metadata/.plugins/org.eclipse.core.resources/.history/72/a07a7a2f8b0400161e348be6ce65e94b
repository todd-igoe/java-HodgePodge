package Bejeweled;

public class Gem {

    private int type;
    public Gem(){
        this.type = genType();
    }

    public int genType(){ //generate a random value for 'type' corresponding its colour
        return (int) (Math.random() * 7);
    }

    public void setType(int type){
        this.type = type;
    }

    public int getType(){
        return type;
    }
}